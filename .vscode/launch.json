{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug C++",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/satSim.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            // "preLaunchTask": "build",  // Optional: Name of the build task to run before debugging
            "miDebuggerPath": "/usr/bin/gdb",  // Optional: Specify path to GDB executable
            "linux": {
                "program": "${workspaceFolder}/satSim.exe"
            },
            "windows": {
                "program": "${workspaceFolder}/satSim.exe.exe"
            },
            "osx": {
                "program": "${workspaceFolder}/satSim.exe"
            }
        }
    ]
}
